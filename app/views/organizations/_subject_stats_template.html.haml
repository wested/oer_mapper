%script{:type=>"text/x-jqote-template", :id=>"subject_stats_tmpl"}
  <![CDATA[
  .row
    .col-md-3
      .stats-header{class:"{{currentSubject}}"}

        %h4
          {{ displaySubject }} OCR Providers Worldwide
        .provider-count {{ organizationsBySubject.length }}
        .add-data
          = image_tag(image_path("green_btn.png"))

    .col-md-3
      .stats-header{class:"{{currentSubject}}"}
        %h4 Recently Added  {{ displaySubject }} Providers
        %ul{"ng-repeat"=>"org in organizationsBySubject"}
          %li {{org.name}}
    .col-md-3
      .stats-header{class:"{{currentSubject}}"}
        %h4 Growth of {{ displaySubject }} Providers Over Time

    .col-md-3
      .stats-header{class:"{{currentSubject}}"}
        %h4 Top countries with the most {{ displaySubject }} providers

  ]]>